<script type="text/javascript">

countries = <%- JSON.stringify(countries) %>

countries.forEach(c => {
    var row = d3.select('#collector-table tbody')
        .append('tr')
    $.post('/status/country', {country: c.code}, data => {
        console.log(data)
        row.append('td')
            .text(c.name)
        row.append('td')
            .text(data.total_ads)
        row.append('td')
            .text(data.timestamp)

        var now = moment()
        var last = moment(data.timestamp)
        if (now.diff(last, 'hours') > 24) {
            var status = 'Down'
        } else {
            var status = 'Up'
        }

        row.append('td')
            .text(status)
            .attr('class', status)

    })

    
})
</script>